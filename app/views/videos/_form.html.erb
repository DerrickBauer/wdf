<%= form_for @video do |f| %>
  <% if @video.errors.any? %>
    <div id="validation_errors">
      <h2>
        <%= pluralize(@video.errors.count, "error") %> prevented saving
      </h2>
      <ul>
        <% @video.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :youtube_id %><br>
    <%= f.text_field :youtube_id %>
  </p>
  <p>
    <%= f.label :display %><br>
    <%= f.check_box :display %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>